<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="default" class="org.apache.log4j.RollingFileAppender"> 
		<param name="File" value="/usr/share/glassfish3/glassfish/domains/domain1/logs/sh.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="10240KB"/>
		<param name="MaxBackupIndex" value="20"/>
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d %5p - %m%n"/>
		</layout> 
	</appender>
	<appender name="sh" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="/usr/share/glassfish3/glassfish/domains/domain1/logs/sh.log"/>
		<param name="Append" value="true"/>
		<param name="MaxFileSize" value="10240KB"/>
		<param name="MaxBackupIndex" value="20"/>
		<layout class="org.apache.log4j.PatternLayout"> 
			<param name="ConversionPattern" value="%d %5p - %m%n"/> 
		</layout> 
	</appender>
	<root>
		<priority value="error"/>
		<appender-ref ref="default"/> 
	</root>
</log4j:configuration>